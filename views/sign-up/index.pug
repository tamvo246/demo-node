html
	head
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",crossorigin="anonymous")
		style(type='text/css').
			body{
				display:flex;
				justify-content:center;
				align-items:center;
			}
			.form{
				width:500px;
				border:1px solid black;
				position:absolute;
				text-align:center;
				padding:10px;
				box-shadow:8px 8px 10px grey;
				background-color:#D8D8D8;
			}
			.form-group{
				margin:25px 0;
				display:flex;
				align-items:center
			}
			label{
				flex-basis:30%;
				text-align:left;
			}
			h1{
			color:#40FF00;
			}
	body
	.form
		h1 Sign up
		//- if error
		//- 	each err in error
		//- 		div(class="alert alert-danger",role="alert")=err 
		form(action='/sign-up/post' method='POST',class="mx-2",enctype="multipart/form-data" )
			.form-group
				label(for="name") Name
				input(type='text',name="name",class="form-control",id="name", value=value?value.name:"")
			.form-group
				label(for="phone") Phone
				input(type='text',name="phone",class="form-control ",id="phone",value=value?value.phone:"" )
			.form-group
				label(for="avatar") Username
				input(type='text',name="username",class="form-control ",id="username",value=value?value.username:"" )
			.form-group
				label(for="password") Password
				input(type='password',name="password",class="form-control",id="password",value=value?value.password:"" )
			.form-group
				label(for="rePass") Password validation
				input(type='password',name="rePass",class="form-control",id="rePass",value=value?value.rePass:"" )
			.form-group
				label(for="age") Age
				input(type='number',name="age",class="form-control ",id="age",value=value?value.age:"" )
			.form-group
				label(for="avatar") Avatar
				input(type='file',name="avatar",class="form-control ",id="avatar" )

			button(class="btn btn-success mt-2") Create	
		if error
				div(class="alert alert-danger",role="alert")=error